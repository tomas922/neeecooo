<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cogito Ergo Sum</title>
    <link rel="stylesheet" href="pohledy/gamba.css" />
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üé∞ POK√âMON GAMBA üé∞</h1>
            <p>Vyber si jednu ze t≈ô√≠ karet a z√≠skej n√°hodn√©ho Pok√©mona!</p>
        </div>

        <div class="game-container">
            <div id="card-selection">
                <h2>üÉè Vyber si svou kartu ≈°tƒõst√≠!</h2>

                <div class="cards-container">
                    <div class="card"  onclick="selectCard(1)">
                        <div class="card-front">üé¥</div>
                        <div class="card-text">Karta 1</div>
                    </div>

                    <div class="card"  onclick="selectCard(2)">
                        <div class="card-front">üÉè</div>
                        <div class="card-text">Karta 2</div>
                    </div>

                    <div class="card"  onclick="selectCard(3)">
                        <div class="card-front">üé≠</div>
                        <div class="card-text">Karta 3</div>
                    </div>
                </div>
            </div>

            <div id="loading" style="display: none;">
                <h2>Hled√°m tv√©ho Pok√©mona... <span class="loading">üîÆ</span></h2>
            </div>

            <div id="result" style="display: none;">

            </div>

            <div class="navigation">


                <button class="btn" type="submit" name="tocka"  onclick="onResetClick()" id="resetBtn" style="display: none;">
                    üé≤ Hr√°t znovu
                </button>
            </div>
        </div>
    </div>

<script>
    let gameState = 'selection';
    let lastPokemon = null; // tady si ulo≈æ√≠me posledn√≠ho pok√©mona

    const typeColors = {
        normal: '#A8A878',
        fighting: '#C03028',
        flying: '#A890F0',
        poison: '#A040A0',
        ground: '#E0C068',
        rock: '#B8A038',
        bug: '#A8B820',
        ghost: '#705898',
        steel: '#B8B8D0',
        fire: '#F08030',
        water: '#6890F0',
        grass: '#78C850',
        electric: '#F8D030',
        psychic: '#F85888',
        ice: '#98D8D8',
        dragon: '#7038F8',
        dark: '#705848',
        fairy: '#EE99AC'
    };

    async function selectCard(cardNumber) {
        if (gameState !== 'selection') return;

        gameState = 'loading';

        // Disable v≈°echny karty
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => card.classList.add('disabled'));

        // Zobraz loading
        document.getElementById('card-selection').style.display = 'none';
        document.getElementById('loading').style.display = 'block';

        try {
            // Generuj n√°hodn√© ID Pok√©mona (1-1025)
            const randomId = Math.floor(Math.random() * 1025) + 1;

            // Fetch data z Pok√©API
            const response = await fetch(`https://pokeapi.co/api/v2/pokemon/${randomId}`);
            if (!response.ok) throw new Error('Pok√©mon not found');

            const pokemon = await response.json();

            lastPokemon = pokemon; // ulo≈æ√≠me pok√©mona pro pozdƒõj≈°√≠ ulo≈æen√≠

            // Zobraz v√Ωsledek
            await displayResult(pokemon, cardNumber);
        } catch (error) {
            console.error('Error fetching Pok√©mon:', error);
            displayError();
        }
    }

    async function displayResult(pokemon, cardNumber) {
        gameState = 'result';

        const resultHTML = `
            <div class="message">üéâ Gratulujeme! Vybrali jste kartu ${cardNumber} a z√≠skali:</div>

            <div class="result-container">
                <div class="result-pokemon">
                    <div class="pokemon-image">
                        ${
                            pokemon.sprites.front_default
                                ? `<img src="${pokemon.sprites.front_default}" alt="${pokemon.name}">`
                                : '<span style="font-size: 4em;">üîÆ</span>'
                        }
                    </div>

                    <div class="pokemon-info">
                        <h3>${pokemon.name.charAt(0).toUpperCase() + pokemon.name.slice(1)}</h3>

                        <div class="pokemon-details">
                            <div class="detail-item">
                                <div class="detail-label">ID</div>
                                <div class="detail-value">#${pokemon.id}</div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">V√Ω≈°ka</div>
                                <div class="detail-value">${(pokemon.height / 10).toFixed(1)} m</div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">V√°ha</div>
                                <div class="detail-value">${(pokemon.weight / 10).toFixed(1)} kg</div>
                            </div>

                            <div class="detail-item">
                                <div class="detail-label">Typy</div>
                                <div class="detail-value">
                                    ${pokemon.types
                                        .map(
                                            type =>
                                                `<span class="type-badge" style="background-color: ${typeColors[type.type.name] ||
                                                    '#68A090'}">${type.type.name}</span>`
                                        )
                                        .join('')}
                                </div>
                            </div>
                        </div>

                        <div class="stats-container">
                            ${pokemon.stats
                                .map(
                                    stat => `
                                <div class="stat-item">
                                    <div class="stat-name">${getStatName(stat.stat.name)}</div>
                                    <div class="stat-value">${stat.base_stat}</div>
                                </div>
                            `
                                )
                                .join('')}
                        </div>
                    </div>
                </div>
             <button type="submit" name="tocka" class="btn btn-primary btn-lg">
             Das un hajdn dzie frojdn
            </button>
            </div>
        `;

        document.getElementById('loading').style.display = 'none';
        document.getElementById('result').innerHTML = resultHTML;
        document.getElementById('result').style.display = 'block';
        document.getElementById('resetBtn').style.display = 'inline-block';
    }

    function displayError() {
        gameState = 'result';

        const errorHTML = `
            <div class="message" style="color: #d32f2f;">üòî Jejda! Nƒõco se pokazilo p≈ôi hled√°n√≠ Pok√©mona.</div>
            <div class="result-container" style="border-color: #f44336;">
                <div class="result-pokemon">
                    <div class="pokemon-image">
                        <span style="font-size: 4em;">‚ùå</span>
                    </div>
                    <div class="pokemon-info">
                        <h3>Chyba p≈ôi naƒç√≠t√°n√≠</h3>
                        <p>Zkuste to pros√≠m znovu pozdƒõji.</p>
                    </div>
                </div>
            </div>
        `;

        document.getElementById('loading').style.display = 'none';
        document.getElementById('result').innerHTML = errorHTML;
        document.getElementById('result').style.display = 'block';
        document.getElementById('resetBtn').style.display = 'inline-block';
    }
async function savePokemon() {
    if (!lastPokemon) return;

    try {
        const response = await fetch('/gamba/ulozitPokemon', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                pokemon_id: lastPokemon.id,
                pokemon_jmeno: lastPokemon.name
            })
        });

        const result = await response.json();
        if (result.success) {
            console.log('Pok√©mon ulo≈æen.');
        } else {
            console.error('Chyba p≈ôi ukl√°d√°n√≠:', result.error);
        }
    } catch (e) {
        console.error('Chyba p≈ôi komunikaci se serverem:', e);
    }
}



    

    // Nov√° funkce volan√° p≈ôi kliknut√≠ na "Hr√°t znovu"
    async function onResetClick() {
        await savePokemon(); //pain without love
        resetGame();
    }

    function resetGame() {
        gameState = 'selection';

        // Skryj v√Ωsledek a reset button
        document.getElementById('result').style.display = 'none';
        document.getElementById('resetBtn').style.display = 'none';

        // Zobraz karty
        document.getElementById('card-selection').style.display = 'block';

        // Znovu aktivuj karty
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => card.classList.remove('disabled'));

        lastPokemon = null; // resetuj posledn√≠ho pok√©mona
    }

    function getStatName(statName) {
        const statNames = {
            hp: 'HP',
            attack: '√ötok',
            defense: 'Obrana',
            'special-attack': 'Sp. √ötok',
            'special-defense': 'Sp. Obrana',
            speed: 'Rychlost'
        };
        return statNames[statName] || statName;
    }
</script>
</body>
</html>
